#DEFINE XR_ROM_START 0xFFFE0000

PrintAddr : ^UBYTE = CAST 0xE000FFF0 TO ^UBYTE
ExitAddr : ^UWORD = CAST 0xE000FFF8 TO ^UWORD

EXTERN FN TestMain () : UWORD
EXTERN _data : UBYTE
EXTERN _data_size : UBYTE
EXTERN _text_size : UBYTE

FN SetupAndMain() : UWORD

    dst := &_data
    src := &_text_size + XR_ROM_START
    cnt := CAST &_data_size TO UWORD
    WHILE cnt > 0 DO
        dst^ = src^
        dst += 1
        src += 1
        cnt -= 1
    END

    RETURN TestMain()
END

FN SimPutc (
    IN char : UBYTE
)
    PrintAddr^ = char
END

FN SimExit ( 
    IN code : UWORD
)
    ExitAddr^ = code
END

FN SoftMul(
    IN x : UWORD,
    IN y : UWORD
) : UWORD
    ret := 0
    i := 0
    WHILE i < 32 DO
        IF ((y >> i) & 1) == 1 THEN
            ret += (x << i)
        END
        i += 1
    END
    RETURN ret
END